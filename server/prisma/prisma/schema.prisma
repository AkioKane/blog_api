generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  role     Role   @default(USER)
  username String
  email    String
  password String
  posts    Post[]
}

model Post {
  id          Int       @id @default(autoincrement())
  author      User      @relation(fields: [author_id], references: [id])
  author_id   Int
  header_text String
  text        String
  date        DateTime  @default(now())
  comments    Comment[]
}

model Comment {
  id      Int      @id @default(autoincrement())
  author  Post     @relation(fields: [post_id], references: [id])
  post_id Int
  user_id Int
  text    String
  date    DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}
